<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-lazy="false" package="clasehibernate">
  <class name="Marca" table="marcas">
    <id name="id" type="java.lang.Integer">
      <column name="id"/>
      <generator class="identity"/>
    </id>
    <property name="codigo" type="string">
      <column length="10" name="codigo"/>
    </property>
    <property name="descripcion">
    </property>    
    <!-- uno a muchos -->
    <list name="proveedores" cascade="all-delete-orphan" lazy="true"> 
        <key column="id_marca" /> 
        <index column="orden" /> 
        <one-to-many class="Proveedor" /> 
    </list>    
  </class>
</hibernate-mapping>
